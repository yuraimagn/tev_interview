<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXam.MenuLayout">
    <MasterDetailPage.Master>
        <ContentPage
            Title="Menu"
            BackgroundColor="#880e4f"
            Padding="0,40,0,0">
            <ListView BackgroundColor="#ede7f6" x:Name="ListMenu" ItemSelected="ListMenu_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell TextColor="Black" DetailColor="Black" Height="25"
                                   Text="{Binding MenuTitle}"
                                   Detail="{Binding MenuDetail}"
                                   ImageSource="{Binding Icon}">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>