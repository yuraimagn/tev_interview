<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXam.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="30">
            <Image Source="name.png" WidthRequest="50" HeightRequest="50"/>
            <Label Text="Introduce tu usuario"/>
            <Entry x:Name="Username" Placeholder="nombre de usuario"/>
            <Button Text="Iniciar sesión" Clicked="Login_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>